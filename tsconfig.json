{
  "compilerOptions": {
    "target": "ES2020",            // Modern JavaScript target
    "module": "ESNext",            // Use ES modules
    "moduleResolution": "node",    // Node.js module resolution strategy
    "esModuleInterop": true,       // For compatibility with CommonJS modules
    "allowSyntheticDefaultImports": true,  // Enable default imports from non-default exports
    "strict": true,                // Enable strict type-checking
    "skipLibCheck": true,          // Skip checking library files
    "forceConsistentCasingInFileNames": true,  // Prevent case-sensitive issues in imports
    "resolveJsonModule": true,     // Support importing JSON files
    "outDir": "./dist",            // Output directory for compiled files
    "baseUrl": ".",                // Base directory for module resolution
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["index.ts", "src/**/*.ts"],  // Include all TypeScript files
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist folders
}
